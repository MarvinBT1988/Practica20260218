@{
}
<form asp-action="CalcularNota" method="post">
    <h1>Formulario de calculo de notas</h1>
    <div class="row">
        <div class="col-3">
            <label>Nota 1</label>
            <input type="number" name="n1" />
        </div>
        <div class="col-3">
            <label>Nota 2</label>
            <input type="number" name="n2" />
        </div>
        <div class="col-3">
            <label>Nota 3</label>
            <input type="number" name="n3" />
        </div>
        <div class="col-3">
           <button>Calcular nota</button>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <label>Resultado</label>
            <input type="text" disabled value="@ViewBag.Promedio"/>
        </div>
    </div>
</form>

